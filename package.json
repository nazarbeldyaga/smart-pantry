{
  "name": "smart-pantry",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "npm test --workspaces --if-present",
    "pre-push-checks": "npm run lint && npm run test && npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.31",
    "@typescript-eslint/parser": "^8.0.0-alpha.31",
    "concurrently": "^8.2.2",
    "eslint": "^9.4.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-react-x": "^2.2.2",
    "globals": "^15.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.31"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
